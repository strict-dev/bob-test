{% assign form = newsletter %}

<div class="flex flex-col gap-2">

  <span class=" text-sm">{{'Cadastre-se e receba nossas novidades' | upcase}}</span>

  {% form 'customer' %}
    {{ form.errors | default_errors }}
    {% if form.posted_successfully? %}
      <p class="form--success">Email cadastrado com sucesso!</p>
    {% else %}
      <div class="border-gray-400 border-2 p-2">
        <input type="hidden" name="contact[tags]" value="newsletter">
        <input type="email"
          name="contact[email]"
          id="Email"
          class="p-2 bg-transparent ring-0 outline-none" 
          value="{% if customer %}{{ customer.email }}{% endif %}"
          placeholder="jose@email.com"
          autocorrect="off"
          autocapitalize="off">

        <button type="submit" class="font-bold" name="commit" id="Subscribe">
          {{'Cadastrar' | upcase}}
        </button>
      </div>
    {% endif %}
  {% endform %}
</div>
